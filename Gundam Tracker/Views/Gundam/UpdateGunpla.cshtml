@model Gundam

<h2>Update @Model.Name</h2>

@using (Html.BeginForm("UpdateGunplaToDatabase", "Gundam", "Post"))
{
    <input asp-for="GundamID" type="hidden" value="@Model.GundamID" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="@Model.Name" />

    <label asp-for="Price" class="control-label">Price</label>    
    <input type="number" step="0.01" name="Price" class="form-control" value="@Model.Price" />
    
    <label asp-for="Grade" class="control-label">Grade</label>    
    <input type="text" name="Grade" class="form-control" value="@Model.Grade" />
    
    <label asp-for="Built" class="control-label">Built</label>    
    <input asp-for="Built"  type="checkbox" class="form-control" />
    
    <label asp-for="Rating" class="control-label">Rating (0-5)</label>    
    <input type="number" step="0.01" name="Rating" class="form-control" value="@Model.Rating" />

    <input type="submit" value="Update Product" class="btn btn-primary" />
}