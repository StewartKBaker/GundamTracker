@model Gundam

<head>
    <title>Create Gundam</title>
    <style>
        h2 {
        text-align: center;
        }
    </style>
</head>

<div class="container">
<h2>Create a New Gundam</h2>

@using (Html.BeginForm("InsertGunplaToDatabase", "Gundam", "Post"))
{
    <input asp-for="GundamID" type="hidden" value="" />

    <label asp-for="Name" class="control-label">Name</label>
    <input type="text" name="Name" class="form-control" value="" />

    <label asp-for="Price" class="control-label">Price</label>    
    <input type="number" step="0.01" name="Price" class="form-control" />
    
    <label asp-for="Grade">Grade</label>
    <select class="form-control" name="Grade" value="">
        <option>HG</option>
        <option>MG</option>
        <option>RG</option>
        <option>PG</option>
    </select>

<div class="form-group">
    <label asp-for="Built" class="control-label">Built</label>
    <div class="form-check form-switch">
        <input asp-for="Built"  class="form-check-input" type="checkbox" id="buildSwitch" />
        <label class="form-check-label" for="buildSwitch">Toggle Built</label>
    </div>
</div>

    <label asp-for="Rating">Rating</label>
    <select class="form-control" name="Rating" value="">
        <option>0</option>
        <option>1</option>
        <option>2</option>
        <option>3</option>
        <option>4</option>
        <option>5</option>
    </select>
    
    <input type="submit" value="Create Product" class="btn btn-primary" />
}
</div>